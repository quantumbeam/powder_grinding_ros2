<launch>
    <!-- Declare launch arguments -->
    <arg name="ur_type" default="ur5e" />
    <arg name="robot_ip" default="192.168.58.42" />
    <arg name="use_fake_hardware" default="true" />
    <arg name="fake_sensor_commands" default="true" />
    <arg name="launch_moveit_rviz" default="true" />
    <arg name="use_moveit" default="true" />
    <arg name="initial_joint_controller" default="joint_trajectory_controller" />

    <arg name="planning_scene_config" default="$(find-pkg-share grinding_scene_description)/config/planning_scene_config.yaml" />

    <!-- Include ur_robot_driver launch file -->
    <include file="$(find-pkg-share ur_robot_driver)/launch/ur_control.launch.py">
        <arg name="ur_type" value="$(var ur_type)" />
        <arg name="robot_ip" value="$(var robot_ip)" />
        <arg name="use_fake_hardware" value="$(var use_fake_hardware)" />
        <arg name="fake_sensor_commands" value="$(var fake_sensor_commands)" />
        <arg name="launch_rviz" value="false" />
        <arg name="initial_joint_controller" value="$(var initial_joint_controller)" />
    </include>

    <!-- Include grinding_ft_filter launch file --><!-- FT Filter Node -->
    <node
        pkg="grinding_ft_filter"
        exec="ft_filter.py"
        name="ft_filter"
        output="screen">
        
        <param name="input_topic" value="/wrench_raw"/>
        <param name="output_topic" value="/wrench_filtered"/>
        <param name="sampling_frequency" value="500.0"/>
        <param name="cutoff_frequency" value="2.5"/>
        <param name="filter_order" value="3"/>
        <param name="data_window" value="100"/>
        <param name="initial_zero" value="true"/>
        <param name="disable_filtering" value="false"/>
    </node>

    <!-- Include ur_moveit_config launch file -->
    <include file="$(find-pkg-share grinding_moveit_config)/launch/ur_moveit.launch.py">
        <arg name="ur_type" value="$(var ur_type)" />
        <arg name="launch_rviz" value="$(var launch_moveit_rviz)" />
    </include>

    <!-- Include grinding_scene_description launch file -->
    <include file="$(find-pkg-share grinding_scene_description)/launch/load_planning_scene.launch.xml">
        <arg name="planning_scene_config" value="$(var planning_scene_config)" />
    </include>

</launch>