<launch>
    <!-- Declare launch arguments -->
    <arg name="ur_type" default="ur5e" />
    <arg name="robot_ip" default="192.168.58.42" />
    <arg name="use_mock_hardware" default="true" />
    <arg name="mock_sensor_commands" default="true" />
    <arg name="launch_rviz" default="false" />
    <arg name="use_moveit" default="true" />
    <arg name="launch_rviz_with_moveit" default="true" />

    <arg name="planning_scene_config" default="$(find-pkg-share grinding_scene_description)/config/planning_scene_config.yaml" />

    <!-- Include ur_robot_driver launch file -->
    <include file="$(find-pkg-share ur_robot_driver)/launch/ur_control.launch.py">
        <arg name="ur_type" value="$(var ur_type)" />
        <arg name="robot_ip" value="$(var robot_ip)" />
        <arg name="use_mock_hardware" value="$(var use_mock_hardware)" />
        <arg name="mock_sensor_commands" value="$(var mock_sensor_commands)" />
        <arg name="launch_rviz" value="$(var launch_rviz)" />
    </include>

    <!-- Include ur_moveit_config launch file -->
    <include file="$(find-pkg-share ur_moveit_config)/launch/ur_moveit.launch.py">
        <arg name="ur_type" value="$(var ur_type)" />
        <arg name="launch_rviz" value="$(var launch_rviz_with_moveit)" />
    </include>

    <!-- Include grinding_scene_description launch file -->
    <include file="$(find-pkg-share grinding_scene_description)/launch/load_planning_scene.launch.xml">
        <arg name="planning_scene_config" value="$(var planning_scene_config)" />
    </include>
</launch>